@model LW_1.Models.Entities.Группы
@{
    ViewBag.Title = "GetGroup";
}

<h2>Группа</h2>
@if (Model != null)
{
    foreach (var propertyInfo in typeof(LW_1.Models.Entities.Группы).GetProperties())
    {
        if (!propertyInfo.GetGetMethod().IsVirtual)
        {
            <div class="row">
                <div class="col-md-3">@propertyInfo.Name.Replace("_", " ")</div>
                <div class="col-md-3">@propertyInfo.GetValue(Model)</div>
            </div>
        }
    }
    <p>
        @Html.ActionLink("Back to List", "ListGroup")
    </p>
}
else
{
    <p> Group not found.</p>
}
